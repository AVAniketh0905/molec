{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C OpenGL",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-o",
        "builds/mollec.exe",
        "src/main.c",
        "src/glad.c",
        "src/mode.c",
        "src/ui.c",
        "-I",
        "include",
        "-L",
        "C:/GLFW/lib-mingw-w64",
        "-L",
        "lib",
        "-lglfw3",
        "-lopengl32",
        "-lgdi32",
        "-lfreetype"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
