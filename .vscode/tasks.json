{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C OpenGL",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-o",
        "main.exe",
        "main.c",
        "glad.c",
        "-I",
        "C:/GLFW/include",
        "-L",
        "C:/GLFW/lib-mingw-w64",
        "-lglfw3",
        "-lopengl32",
        "-lgdi32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
